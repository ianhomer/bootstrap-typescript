{
  "name": "bootstrap-typescript",
  "version": "1.0.0",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf build",
    "eslint": "eslint src",
    "eslint:fix": "eslint src",
    "lint": "pnpm prettier && pnpm eslint",
    "lint:fix": "pnpm package:fix && pnpm prettier:fix && pnpm eslint:fix",
    "prepare": "husky",
    "prettier": "npx prettier --check .",
    "prettier:fix": "npx prettier --write .",
    "start": "ts-node src/index.ts",
    "test": "pnpm jest",
    "test:watch": "pnpm jest --watch",
    "update": "pnpm update -L"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.36.0",
    "@jest/types": "30.0.5",
    "@types/eslint__eslintrc": "^3.3.0",
    "@types/eslint__js": "^9.14.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-no-only-tests": "^3.3.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "prettier-plugin-packagejson": "^2.5.19",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "typescript": "5.9.2"
  }
}
