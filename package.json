{
  "name": "bootstrap-typescript",
  "version": "1.0.0",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf build",
    "eslint": "eslint src",
    "eslint:fix": "eslint src",
    "lint": "pnpm prettier && pnpm eslint",
    "lint:fix": "pnpm package:fix && pnpm prettier:fix && pnpm eslint:fix",
    "prepare": "husky",
    "prettier": "npx prettier --check .",
    "prettier:fix": "npx prettier --write .",
    "start": "ts-node src/index.ts",
    "test": "pnpm jest",
    "test:watch": "pnpm jest --watch",
    "update": "pnpm update -L"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^10.0.1",
    "@jest/types": "30.2.0",
    "@types/eslint__eslintrc": "^3.3.0",
    "@types/eslint__js": "^9.14.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.2",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-no-only-tests": "^3.3.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sonarjs": "^3.0.6",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "prettier-plugin-packagejson": "^3.0.0",
    "rimraf": "^6.1.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "5.9.3"
  }
}
