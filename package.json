{
  "name": "bootstrap-typescript",
  "version": "1.0.0",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf build",
    "eslint": "eslint src",
    "eslint:fix": "eslint src",
    "lint": "pnpm prettier && pnpm eslint",
    "lint:fix": "pnpm package:fix && pnpm prettier:fix && pnpm eslint:fix",
    "prepare": "husky",
    "prettier": "npx prettier --check .",
    "prettier:fix": "npx prettier --write .",
    "start": "ts-node src/index.ts",
    "test": "pnpm jest",
    "test:watch": "pnpm jest --watch",
    "update": "pnpm update -L"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.28.0",
    "@jest/types": "30.0.0-beta.3",
    "@types/eslint__eslintrc": "^3.3.0",
    "@types/eslint__js": "^9.14.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.29",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-no-only-tests": "^3.3.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sonarjs": "^3.0.2",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.0",
    "prettier": "^3.5.3",
    "prettier-plugin-packagejson": "^2.5.15",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "typescript": "5.8.3"
  }
}
